<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="colorPrimary">@color/redcarpet_primary</item>
        <item name="colorPrimaryDark">@color/redcarpet_primary_darker</item>
        <item name="colorAccent">@color/redcarpet_accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/redcarpet_accent</item>
        <item name="colorControlActivated">@color/white_translucent</item>
        <item name="colorControlHighlight">@color/white_translucent</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="RadioButton">

        <item name="colorControlNormal">@color/white_translucent</item>
        <item name="colorControlActivated">@color/redcarpet_accent</item>
        <item name="colorControlHighlight">@color/redcarpet_accent</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="subtitleTextStyle">@style/TextAppearance.ActionBar.Subtitle</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.ActionBar.Subtitle</item>
    </style>

    <style name="TextAppearance.ActionBar.Subtitle" parent="android:Widget.TextView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/redcarpet_splash</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="AppTheme.TextButton.Compact">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">16sp</item>

        <item name="android:textColor">@color/redcarpet_splash</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- -->

    <style name="SwipeFling">
        <item name="rotation_degrees">20</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">8</item>
    </style>

    <style name="DrawerText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">false</item>
        <item name="android:tint">@color/grey</item>
    </style>


    <!--search  bar-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/material_red_500</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/material_red_500</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_90</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="ToolbarSearchView" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>


    <style name="AppTheme.ChannelBar" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/material_red_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MessageBar" parent="AppTheme">
    </style>

</resources>

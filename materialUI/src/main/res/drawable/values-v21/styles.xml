<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="colorPrimary">@color/redcarpet_primary</item>
        <item name="colorPrimaryDark">@color/redcarpet_primary_darker</item>
        <item name="colorAccent">@color/redcarpet_accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/redcarpet_accent</item>
        <item name="colorControlActivated">@color/white_translucent</item>
        <item name="colorControlHighlight">@color/white_translucent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="subtitleTextStyle">@style/TextAppearance.ActionBar.Subtitle</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.ActionBar.Subtitle</item>
    </style>

    <style name="TextAppearance.ActionBar.Subtitle" parent="Widget">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/redcarpet_splash</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="AppTheme.TextButton.Compact">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">16sp</item>

        <item name="android:textColor">@color/redcarpet_splash</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- -->

    <style name="SwipeFling">
        <item name="rotation_degrees">20</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">8</item>
    </style>

    <style name="DrawerText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DrawerIcon">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">false</item>
        <item name="android:tint">@color/grey</item>
    </style>

</resources>
